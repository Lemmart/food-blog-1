#main.container
  %link{:crossorigin => "anonymous", :href => "https://use.fontawesome.com/releases/v5.8.1/css/all.css", :integrity => "sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf", :rel => "stylesheet"}/
  %link{:href => "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", :rel => "stylesheet"}/
  
  .left_index
    %button.filter_button.btn.btn-warning{:type => "button"} Breakfast
    %br
    %button.filter_button.btn.btn-danger{:type => "button"} Lunch
    %br
    %button.filter_button.btn.btn-info{:type => "button"} Dinner
    %br
    %button.filter_button.btn.btn-secondary{:type => "button"} Snack
    %br
  .right_index
    -@posts.each do |post|
      .card.mb-3.posty
        .btn-group{"aria-label" => "Basic example", :role => "group"}
          .btn.btn-secondary
            .link-button=link_to("Delete", post_path(post), method: :delete)
          .btn.btn-secondary
            .link-button=link_to("Edit", edit_post_path(post))

        - (1..post.rating).each do |s|
          .stars.fas.fa-star

        .card-body
        - if post.image_url
          %img{ src: post.image_url }
        - else
          %img{ src: "https://s3.us-east-2.amazonaws.com/frankly-food1/uploads/noimg.jpeg" }
        %p.card-text.titley= link_to("#{post.caption}", post_path(post), method: :get)

        %h6.card-subtitle.mb-2.text-muted= "User: #{post.user.username}"
        
        .card-footer.text-muted.post-information= "#{post.location} || #{post.time} || #{post.tags} || Stars: #{post.rating}"

        -post.comments.each do |c|
          %p #{c.user.username}: #{c.body}
        %p.comment Add a comment:
        =simple_form_for([post, post.comments.build]) do |f|
          = f.input :body 
          = f.button :submit




  // Floating Button
  %a.new-button{:href => new_post_path}
    %i.fas.fa-plus.my-float
    
  %a.about-button{:href => "/about"}
    %i.fas.fa-user.my-float
