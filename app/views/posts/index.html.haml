  %p= link_to 'New Post', new_post_path
    
  %p
    -@posts.each do |post|
      .card.mb-3
        .card-body
        %p.image= image_tag post.image.attached? ? post.image.variant(resize: "100x100^") : 'noimg.jpeg'
        %p.card-text= "#{post.caption}"
        %h6.card-subtitle.mb-2.text-muted= "#{post.location}"
        .card-body
          %a.card-link= link_to("Delete Post", post_path(post), method: :delete)
        .card-footer.text-muted
          %p.time= "#{post.time}"
        %p.comment Comments
        -post.comments.each do |c|
          %p #{c.username}: #{c.body}
        %p.comment Add a comment:
        =form_for([post, post.comments.build]) do |f|
          .field
          = f.label :username
          = f.text_field :username
          .field
          = f.label :body
          = f.text_area :body
          .actions
          = f.submit "Add comment"
