%form-container
  = form_with(model: post, local: true,  html: { class: 'directUpload',data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host }}) do |form|
    .field
      = form.label :caption
      = form.text_field :caption, required: true
    .field
      = form.label :rating
      = form.number_field :rating, required: true
    .field
      = form.label :location
      = form.text_field :location, required: true
    .field
      = form.label :time
      = form.text_field :time, required: true
    .field
      = form.label :tags
      = form.text_area :tags, required: true
    .field
      =form.label :image, "Image"
      =form.file_field :image_url

    .field
      = form.submit "Create Post"