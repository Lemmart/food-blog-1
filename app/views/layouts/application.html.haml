!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title Blog
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    #header 
      %h1 Frank.ly
      - if flash[:notice]
        %p{:class => 'alert alert-info', :role => 'alert'}= flash[:notice]
      - if flash[:warning]
        %p{:class => 'alert alert-danger', :role => 'alert'}= flash[:warning]
    = yield
